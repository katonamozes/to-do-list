#include <Servo.h>
#include <LiquidCrystal.h>

Servo myservo;
LiquidCrystal lcd(7, 8, 9, 10, 11, 12);
// Pin Definitions
const int buttonYes = 2; // Button 1
const int buttonNo  = 3; // Button 2


void setup() {
  
  lcd.begin(16,2);
  pinMode(buttonYes, INPUT_PULLUP);
  pinMode(buttonNo, INPUT_PULLUP);
  myservo.attach(40);
  myservo.write(50); //Put a value here that works for your servo
  
  Serial.println("System Ready.");
}

void loop() {
  // Step 1: Check Homework
  lcd.clear();
  lcd.setCursor(0,0);
  lcd.print("Did you do your");
  lcd.setCursor(0,1);
  lcd.print("homework? ");
  int homeworkResult = waitForInput();

  if (homeworkResult == buttonYes) {
    // Step 2: Check Chores
    lcd.clear();
    lcd.setCursor(0,0);
    lcd.print("Did you do your");
    lcd.setCursor(0,1);
    lcd.print("chores?");
    int choresResult = waitForInput();

    if (choresResult == buttonYes) {
      lcd.clear();
      lcd.setCursor(0,0);
      lcd.print("Did you organize");
      lcd.setCursor(0,1);
      lcd.print("your desk?");
      int organizationResult = waitForInput();

      if (organizationResult == buttonYes) {
        lcd.clear();
        lcd.setCursor(0,0);
        lcd.print("Everything done!!!");
        lcd.setCursor(0,1);
        lcd.print("Let's game!!!");
        myservo.write(170); //Put a value here that works for your servo
        delay(72000000); //Put here how many seconds you want to gaem times 1000
        myservo.write(90); //Put a value here that works for your servo
      }

      else{
        lcd.clear();
        lcd.setCursor(0,0);
        lcd.print("Organize your");
        lcd.setCursor(0,1);
        lcd.print("desk!!!");
        delay(300000);//Put here how many seconds you need in order to make organize your desk times 1000
      }

      // --- Add your specific Arduino action (like turning on an LED) here ---

    } else {
      lcd.clear();
      lcd.setCursor(0,0);
      lcd.print("Do your chores!!!");
      delay(600000); //Put here how many seconds you need in order to do your chores times 1000
    }
  } else {
    lcd.clear();
    lcd.setCursor(0,0);
    lcd.print("Do your homework!!!");
    delay(300000); //Put here how many seconds you need in order to make your homework times 1000
  }
  
  lcd.print("-----------------------------------");
}

// Helper function to wait until a button is pressed
int waitForInput() {
  while (true) {
    if (digitalRead(buttonYes) == LOW) {
      delay(200); // Simple debounce
      return buttonYes;
    }
    if (digitalRead(buttonNo) == LOW) {
      delay(200); // Simple debounce
      return buttonNo;
    }
  }
}
